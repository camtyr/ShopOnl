@model website2.Models.LoaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container" style="margin: 100px 0px">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-heading">
                <h3>Sửa loại sản phẩm</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "LoaiSanPhamAdmin", FormMethod.Post, new { @style = "width: 80%" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaLoaiSanPham)

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenLoaiSanPham, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%" } })
                                @Html.ValidationMessageFor(model => model.TenLoaiSanPham, "", new { @class = "text-danger" })
                                <span class="text-danger">@TempData["Error"]</span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">

                                    <select name="TinhTrang">
                                        @if (Model.TinhTrang == true)
                                        {
                                            <option value="False">Đã khóa</option>
                                            <option value="True" selected>Chưa khóa</option>
                                        }
                                        else
                                        {
                                            <option value="False" selected>Đã khóa</option>
                                            <option value="True">Chưa khóa</option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
