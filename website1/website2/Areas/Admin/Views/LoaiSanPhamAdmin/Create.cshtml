@model website2.Models.LoaiSanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container" style="margin: 100px 0px">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-heading">
                <h3>Thêm loại sản phẩm</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "LoaiSanPhamAdmin", FormMethod.Post, new {@style = "width: 80%"}))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenLoaiSanPham, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenLoaiSanPham, "", new { @class = "text-danger" })
                                <span class="text-danger">@TempData["Error"]</span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    
                                        <select name="TinhTrang">
                                            <option value="True">Chưa khóa</option>
                                            <option value="False" selected>Đã khóa</option>
                                        </select>
                                    
                                    
                                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
